---
import Layout from "../layouts/Layout.astro";
import {playlists,songs} from "@/lib/data";
import PlayListItemCard from "@/components/PlayListItemCard.astro"
import Greeting from "../components/Greeting.svelte";
---

<Layout title="Spotify clone">
  <div id="playlist-container" class="relative transition-all duration-300 bg-gradient-to-b from-[#221360] to-[#111112]">
    <!-- <PageHeader/> -->
    <div class="relative z-10 px-6 pt-4">
        <Greeting/>
        
    </div>
    <div class="flex flex-wrap relative z-10 px-6 gap-4 mt-6">
      {playlists.map(playlist=><PlayListItemCard playlist={playlist} songs={songs.filter(song=>song.albumId == playlist.albumId)}/>)}
    </div>
  </div>
</Layout>
